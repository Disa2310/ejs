<% result.forEach(function(data){ var hobby = data.hobby; let hobby_arr = hobby.split(","); %>
    <form method="post" classname="bg-dark">
        <table>
            <tr>
                <td>Name:</td>
                <td><input type="text" name="name" value="<%= data.name %>"></td>
            </tr>
            <tr>
                <td>Email:</td>
                <td><input type="email" name="email" value="<%= data.email %>"></td>
            </tr>
            <tr>
                <td>password:</td>
                <td><input type="password" name="password" value="<%= data.password %>"></td>
            </tr>
            <tr>
                <td>Address:</td>
                <td><input type="text" name="address" value="<%= data.address %>"></input></td>
            </tr>
            <tr>
                <td>City:</td>
                <td><input type="text" name="city" value="<%= data.city %>"></td>
            </tr>
            <tr>
                <td>Mobile:</td>
                <td><input type="text" name="mobile" value="<%= data.mobile %>"></td>
            </tr>
            <tr>
                <td>Hobby</td>
                <td>
                    <input type="checkbox" name="hobby" value="reading"<% if(hobby_arr.includes("reading")) {%> checked <% }%>  >Reading
                    <input type="checkbox" name="hobby" value="Travelling"<% if(hobby_arr.includes("Travelling")) {%> checked <% }%> >Travelling
                    <input type="checkbox" name="hobby" value="Music"<% if(hobby_arr.includes("Music")) {%> checked <% }%> >Music
                </td>
            </tr>
            
            <tr>
                <td></td>
                <td><input type="submit" name="update" value="update"></td>
            </tr>
        </table>
    </form>

<%}); %>